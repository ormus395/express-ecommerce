<%- include('../includes/head.ejs') %>
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
        <main>
            <% if (orders.length <= 0) { %>
                <h1>Nothing there!</h1>
            <% } else { %>
                <ul>
                    <% orders.forEach(function(order) { %> 
                        <li>
                            <h1># <%= order.id %></h1>
                            <ul>
                                <ul>
                                    <% order.products.forEach(function(item){ %>
                                        <li><%= item.title %> </li>
                                    <% }); %>
                                </ul>
                            </ul>
                        </li>
                        <a target="_blank" href="/orders/<%= order.id %>">Invoice</a>
                    <% }); %>
                </ul>
            <% } %>
        </main>
        <%- include('../includes/end.ejs') %>